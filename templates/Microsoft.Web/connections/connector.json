{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "allowedValues": ["northeurope", "westeurope"],
        "metadata": {
          "description": "Set the location for all resources, same location as the resource group"
        }
      },
      "tagOpCo": {
        "type": "string",
        "defaultValue": "AXA I",
        "metadata": {
          "description": "Set the Resource OpCo tag associated to the Resources"
        }
      },
      "tagEnvironment": {
        "type": "string",
        "metadata": {
          "description": "Set the Resource Environment tag associated to the Resources"
        }
      },
      "tagApplication": {
        "type": "string",
        "metadata": {
          "description": "Set the Resource Application tag associated to the Resources"
        }
      },
      "tagUse": {
        "type": "string",
        "metadata": {
          "description": "Set the Resource Use tag; Resource brief description of Use"
        }
      },
      "tagsAdditional": {
        "type": "object",
        "defaultValue": {},
        "metadata": {
          "description": "Set additional required tags associated to the Resources"
        }
      },
      "connectorType": {
        "type": "string",
        "metadata": {
          "description": "Enter the type of connections to be created"
        }
      },
      "connectorName": {
        "type": "string",
        "metadata": {
          "description": "Name of Azure Blob Storage API Connection"
        }
      },
      "connectorDisplayName": {
        "type": "string",
        "metadata": {
          "description": "Display Name of the Azure Blob Storage API Connection"
        }
      },
      "parameterValues": {
        "type": "secureobject",
        "metadata": {
          "description": "Name of Azure Blob Storage API Connection"
        }
      }
    },
    "variables": {
      "tagOpCo": {"OpCo": "[parameters('tagOpCo')]"},
      "tagEnvironment": {"Environment": "[parameters('tagEnvironment')]"},
      "tagApplication": {"Application": "[parameters('tagApplication')]"},
      "tagUse": {"Use": "[parameters('tagUse')]"},
      "tags": "[union(variables('tagOpCo'), variables('tagEnvironment'), variables('tagApplication'), variables('tagUse'), parameters('tagsAdditional'))]"
    },
    "resources": [
      {
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "location": "[parameters('location')]",
        "name": "[parameters('connectorName')]",
        "tags": "[variables('tags')]",
        "properties": {
          "displayName": "[parameters('connectorDisplayName')]",
          "api": {
            "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', parameters('location'), '/managedApis/', parameters('connectorType'))]"
          },
          "parameterValues": "[parameters('parameterValues')]"
        }
      }
    ],
    "outputs": {
    "connector": {
      "type": "object",
      "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connectorName')), '2016-06-01', 'Full')]"
    }
  }
}
  